        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"client@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "protocol": "http",
              "host": ["localhost:5000"],
              "path": ["api", "auth", "login"]
            },
            "description": "Connexion d'un utilisateur",
            "events": [
              {
                "listen": "test",
                "script": {
                  "type": "text/javascript",
                  "exec": [
                    "// Test de la réponse",
                    "pm.test('Status code is 200', function() {",
                    "  pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test('Response has token', function() {",
                    "  var jsonData = pm.response.json();",
                    "  pm.expect(jsonData).to.have.property('token');",
                    "  pm.expect(jsonData.token).to.be.a('string');",
                    "});",
                    "",
                    "// Stocker le token dans les variables de collection",
                    "if (pm.response.code === 200) {",
                    "  const jsonData = pm.response.json();",
                    "  pm.collectionVariables.set('token', jsonData.token);",
                    "  pm.collectionVariables.set('user_id', jsonData.user._id || jsonData.user.id);",
                    "  console.log('Token stored:', jsonData.token);",
                    "}"
                  ]
                }
              }
            ]
          },
          "response": []
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "protocol": "http",
              "host": ["localhost:5000"],
